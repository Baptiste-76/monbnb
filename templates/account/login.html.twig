{% extends "base.html.twig" %}

{% block title %}
    Connexion au site
{% endblock %}

{% block body %}

    <div class="container pb-5 mb-2">
        <div class="row">
            <div class="col-md-3">
                &nbsp;
            </div>
            <div class="col-md-6">
                <div class="bg-light py-3 px-3 rounded-lg">
                    <h2>Connectez-vous !</h2>

                    {% if hasError %}
                        <div class="alert alert-danger">
                            <h5 class="alert-heading">Attention,</h5> 
                            <p>l'adresse email et/ou le mot de passe est/sont invalide(s) !</p>
                        </div>
                    {% endif %}
                    
                    <form action="{{ path('account_login') }}" method="POST">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="text" name="_username" id="email" class="form-control" placeholder="Adresse email" required value="{{ username }}">
                        </div>
                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <input type="password" name="_password" id="password" placeholder="Mot de passe" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Connexion</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
