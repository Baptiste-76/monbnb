{% extends "base.html.twig" %}

{% block title %}
    Modification de mot de passe
{% endblock %}

{% block body %}
    <div class="container clearfix pb-5 mb-2">
        <div class="bg-primary py-3 px-3 rounded-lg">
            <h2 class="my-4 h3">Modification de votre mot de passe</h2>      
            
            {{ form_start(form, { 'attr': { 'novalidate': 'novalidate'}}) }}
            {{ form_widget(form) }}

            <div class="text-center">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-check mr-2"></i>
                    Enregistrer les modifications
                </button>
            </div>

            {{ form_end(form )}}
        </div>
    </div>
{% endblock %}