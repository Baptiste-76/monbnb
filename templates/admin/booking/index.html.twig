{% extends 'admin/base.html.twig' %}

{% block title %}
    Gestion des réservations
{% endblock %}
    
{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Gestion des réservations</h1>
        <table class="table table-hover" style="color: white;">
            <thead>
                <tr class="text-center">
                    <th>Id</th>
                    <th>Date</th>
                    <th>Visiteur</th>
                    <th>Annonce</th>
                    <th>Durée</th>
                    <th>Montant</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                {% for booking in bookings %}
                <tr class="text-center">
                    <td>{{ booking.id }}</td>
                    <td>{{ booking.createdAt | date('d:m:Y H:i') }}</td>
                    <td>
                        <img src="{{ booking.booker.picture }}" alt="Avatar de {{ booking.booker.fullName }}" class="avatar avatar-mini">
                        {{ booking.booker.fullName }}
                    </td>
                    <td>{{ booking.ad.title }}</td>
                    <td>{{ booking.duration }} nuit(s)</td>
                    <td>{{ booking.amount }} &euro;</td>
                    <td>
                        <a href="{{ path('admin_bookings_edit', {'id': booking.id}) }}" class="btn btn-primary">
                            <i class="fas fa-pen"></i>
                        </a>
                        <a href="{{ path('admin_bookings_delete', {'id': booking.id}) }}" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
