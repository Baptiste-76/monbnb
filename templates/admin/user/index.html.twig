{% extends 'admin/base.html.twig' %}

{% block title %}
    Gestion des utilisateurs
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Gestion des utilisateurs</h1>
        <table class="table table-hover" style="color: white;">
            <thead>
                <tr class="text-center">
                    <th>Id</th>
                    <th>Nom complet</th>
                    <th>Email</th>
                    <th>Avatar</th>
                    <th>Introduction</th>
                    <th>Description</th>
                    <th>Slug</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                {% for user in users %}
                    <tr class="text-center">
                        <td>{{ user.id }}</td>
                        <td>{{ user.fullName }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            <img src="{{ user.picture }}" alt="Avatar de {{ user.fullName }}" class="avatar avatar-mini">
                        </td>
                        <td>{{ user.introduction }}</td>
                        <td>{{ user.description | raw }}</td>
                        <td>{{ user.slug }}</td>
                        <td>
                            <a href="{{ path('admin_users_edit', {'id' : user.id}) }}" class="btn btn-primary">
                                <i class="fas fa-pen"></i>
                            </a>
                            <a href="#" class="btn btn-danger mt-2">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}    
            </tbody>
        </table>
    </div>
{% endblock %}
