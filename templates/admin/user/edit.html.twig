{% extends "admin/base.html.twig" %}

{% block title %}
    Modification de l'utilisateur n° {{ user.id }} ({{user.fullName}})
{% endblock %}

{% block body %}
    <div class="container-fluid pb-5 mb-3">

        <h3 class="my-5">Modification de l'utilisateur n° {{ user.id }} ({{user.fullName}})</h3>

        <div class="card bg-primary p-3">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    {{ form_label(form.picture) }}
                    <div class="row align-items-center text-center">
                        <div class="col-xs-12 col-md-4 mb-2">
                            <img src="{{ user.picture }}" class="avatar avatar-medium">
                        </div>
                        <div class="col-xs-12 col-md-8 mb-2">
                            {{ form_widget(form.picture) }}
                        </div> 
                    </div>
                    {{ form_row(form.firstName) }}
                    {{ form_row(form.lastName) }}
                    {{ form_row(form.email) }}
                </div>
                <div class="col-xs-12 col-md-6">
                    {{ form_row(form.introduction) }}
                    {{ form_row(form.description) }}
                    {{ form_row(form.slug) }}
                    <div class="text-center">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-check mr-2"></i>
                            Enregistrer les modifications
                        </button>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}