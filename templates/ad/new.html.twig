{% extends "base.html.twig" %}

{% block title %}
    Création d'une annonce
{% endblock %}

{% form_theme form "ad/_collection.html.twig" %}

{% block body %}
    <div class="container">
        <h1>Créer une nouvelle annonce</h1>
        
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

        {{ form_widget(form) }}

        <button type="submit" class="btn btn-success">Valider la création de mon annonce</button>

        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="/js/ad.js"></script>
{% endblock %}

