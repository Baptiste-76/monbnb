{% extends "base.html.twig" %}

{% block title %}
    Création d'une annonce
{% endblock %}

{% form_theme form "ad/_collection.html.twig" %}

{% block body %}
    <div class="container pb-5">
        <h2 class="my-5">Créer une nouvelle annonce</h2>
        
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

        <div class="row">
            <div class="col-md-6">
                <div class="alert alert-primary rounded-lg">
                    <h3 class="alert-heading">Informations générales</h3>
                    <hr>
                    {{ form_row(form.title) }}
                    {{ form_row(form.slug) }}
                    {{ form_row(form.price) }}
                    {{ form_row(form.rooms) }}
                </div>
                <div class="alert alert-primary rounded-lg">
                    <h3 class="alert-heading">Détails de l'annonce</h3>
                    <hr>
                    {{ form_row(form.introduction) }}
                    {{ form_row(form.content) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="alert alert-primary rounded-lg">
                    <h3 class="alert-heading">Images de l'annonce</h3>
                    <hr>
                    {{ form_row(form.coverImage) }}
                    {{ form_row(form.images) }}
                </div>
            </div>
        </div>

        <div class="alert alert-primary clearfix">
            <h3 class="alert-heading">Sauvegarder mon annonce</h3>
            <div class="alert alert-dark">
                <p>
                    Vous êtes sur le point de créer votre annonce, <strong>nous sommes très fiers de vous !</strong>
                </p>
            </div>
            <button type="submit" class="btn btn-success float-right">
                <i class="fa fa-check mr-2"></i>
                Valider la création de mon annonce
            </button>
        </div>
        

        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('ad') }}
{% endblock %}

