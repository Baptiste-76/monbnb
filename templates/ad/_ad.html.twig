{% set url = path('ads_show', {'slug': ad.slug}) %}

<div class="col-md-6 col-lg-4 mb-3">
    <div class="card bg-light mb-3 h-100 rounded-lg">
        <div class="card-header text-center">
            {{ ad.rooms }} chambre(s), <strong>{{ ad.price | number_format(2, ',', ' ') }} &euro; / nuit</strong> <br>

            {% if ad.comments | length > 0 %}
                {% include "partials/rating.html.twig" with {'rating': ad.avgRatings} %}
            {% else %}
                <small>Pas encore not√©</small>
            {% endif %}
        </div>
        <a href="{{ url }}">
            <img src="{{ ad.coverImage }}" alt="Image de l'appartement" style="height: 200px; width: 100%; display:block">
        </a>
        <div class="card-body">
            <h4 class="card-title">
                <a href="{{ url }}" class="text-white">
                    {{ ad.title }}
                </a>
            </h4>
            <p class="card-text">
                {{ ad.introduction }}
            </p>
            <div class="text-center">
                <a href="{{ url }}" class="btn btn-primary">
                    <i class="fas fa-plus mr-2"></i>
                    En savoir plus
                </a>
                <br>
                {% if app.user and app.user == ad.author %}
                    <a href="{{ path('ads_edit', {'slug': ad.slug}) }}" class="btn btn-secondary mt-2">
                        <i class="fas fa-pencil-alt mr-2"></i>
                        Modifier l'annonce</a>
                {% endif %}
            </div>
        </div>
    </div>
</div>